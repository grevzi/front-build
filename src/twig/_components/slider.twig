<div data-module="slider">
    <!-- Slider main container -->
    <div class="swiper-container">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">

            {% for item in items %}
                <!-- Slides -->
                <div class="swiper-slide flex justify-between items-center">
                    <div class="flex flex-col px-12">
                        <div class="text-white text-2xl font-semibold mb-2"> {{ item.title }}
                            <span class="text-yellow-500 text-sm">{{ item.date }}</span>
                        </div>
                        <div class="text-yellow-500 text-sm mb-2">{{ item.category }}</div>
                        <div class="flex items-center">
                            <div class=" text-yellow-500 text-sm mr-2 text-4xl">
                                {{ item.rate }}
                            </div>

                            {% for i in 0..10 %}
                                <svg class="w-6 h-6 icon icon-star text-yellow-500 mr-1.5">
                                    <use xlink:href="/sprite.svg#icon-star"></use>
                                </svg>
                            {% endfor %}
                        </div>

                    </div>
                    <div>
                        {% include '@c/img.twig'  with {src: item.img, classes: 'h-auto w-full object-cover', alt:item.title} %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>

        <!-- If we need scrollbar -->
        <div class="swiper-scrollbar"></div>
    </div>
</div>